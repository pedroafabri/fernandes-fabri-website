---

import Logo from '../assets/images/logo.svg'
import CtaButton from './CtaButton.astro'

const { settings } = Astro.props

---

<script type="module" is:inline>
  const date = new Date();
  const year = date.getFullYear();
  document.getElementById('copy-year').textContent = year;
</script>

<footer class="@container bs-container my-24 font-semibold text-bs-foreground-dark [&_a]:hover:text-bs-foreground-light [&_a]:transition-color [&_a]:duration-150" id="contact">

  <!-- Wrapper -->
  <div class="bg-bs-surface-1/60 p-6 md:p-16 rounded-xl grid md:grid-cols-2 gap-8">

      <!-- Left col -->
      <div class="w-max flex flex-col gap-8 md:gap-0 justify-between text-bs-foreground-light">

        <!-- Logo -->
        <a class="flex group mb-8" href="#top" aria-label="Back to top">

          <Logo class="group-hover:scale-80 transition-transform ease-bs-spring duration-1000" height="80" width="80" />

        </a>

        <!-- CTA Button -->
        <CtaButton settings={settings} />

      </div>

      <!-- Right col -->
      <div class="flex gap-10 md:gap-2 lg:gap-20 md:justify-end [&_a]:block md:[&_a]:px-5 [&_a]:py-2">

        <!-- Nav -->
        <nav class="flex flex-col">

          { settings.nav.sort((a,b) => a.order - b.order).map( item =>

            <a href={ item.link }>
              { item.title }
            </a>

          )}

        </nav>

        <!-- Social links -->
        <nav class="flex flex-col">

          { settings.social_links.sort((a,b) => a.title.localeCompare(b.title)).map( item =>

            <a href={ item.link } target="_blank" rel="noopener noreferrer">
              { item.title }
            </a>

          )}

        </nav>

      </div>

  </div>


  <!-- Colophon -->
  <aside class="bs-container">
      <nav class="flex flex-col gap-1 justify-center items-center pt-16 md:pt-24 text-xs">
        <!-- Credits -->
        <p>&copy; <span id="copy-year"></span> Fernandes Fabri Advocacia Empresarial - Todos os direitos reservados.</p>

        <!-- Copyright/Date -->
        <a href="https://blackspike.com/">Template by blackspike.com</a>
      </nav>
  </aside>

</footer>

